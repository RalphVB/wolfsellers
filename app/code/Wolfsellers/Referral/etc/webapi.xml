<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route method="GET" url="/V1/referral/getAll/">
        <service class="Wolfsellers\Referral\Api\ReferralInterface" method="getReferrals"/>
        <resources>
            <resource ref="Wolfsellers_Referral::getReferrals"/>
        </resources>
    </route>
    <route method="POST" url="/V1/referral/get/">
        <service class="Wolfsellers\Referral\Api\ReferralInterface" method="getBy"/>
        <resources>
            <resource ref="Wolfsellers_Referral::getBy"/>
        </resources>
    </route>
    <route method="POST" url="/V1/referral/create/">
        <service class="Wolfsellers\Referral\Api\ReferralInterface" method="create"/>
        <resources>
            <resource ref="Wolfsellers_Referral::create"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/referral/delete/:id">
        <service class="Wolfsellers\Referral\Api\ReferralInterface" method="delete"/>
        <resources>
            <resource ref="Wolfsellers_Referral::delete"/>
        </resources>
    </route>
</routes>