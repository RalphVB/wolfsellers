<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="wolfsellers_referral" resource="default" engine="innodb" comment="Wolfsellers Referral">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Referral ID"/>
        <column xsi:type="varchar" name="first_name" nullable="false" length="255" comment="First Name"/>
        <column xsi:type="varchar" name="last_name" nullable="false" length="255" comment="Last Name"/>
        <column xsi:type="varchar" name="email" nullable="false" length="25" comment="Email"/>
        <column xsi:type="int" name="phone" nullable="false" comment="Phone Number"/>
        <column xsi:type="boolean" name="status" nullable="true" comment="Referral Status" />
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" on_update="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="WOLFSELLERS_REFERRAL_EMAIL">
            <column name="email"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="WOLFSELLERS_REFERRAL_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="wolfsellers_referral" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id"/>
        <index referenceId="IDX_WOLFSELLERS_REFERRAL" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
</schema>